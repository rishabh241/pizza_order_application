<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:background="@drawable/list_back">

     <ImageView
         android:id="@+id/pizzaImg"
         android:layout_width="120dp"
         android:layout_height="120dp"
         android:scaleType="fitCenter"
         android:background="@drawable/imgg_back"
         android:clipToOutline="true"
         android:src="@drawable/pizzaa" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:paddingRight="5dp"
        android:layout_gravity="center">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pizzaName"
        android:text="Pizza"
        android:layout_gravity="start"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="17dp"
        android:textColor="@color/pDarkRed"
        android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pizzaDesc"
            android:textColor="@color/pLightBrown"
            android:padding="3dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."/>
    </LinearLayout>


</LinearLayout>